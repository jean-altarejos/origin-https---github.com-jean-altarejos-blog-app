<%- include ("partials/header.ejs") %>
<div class="blog">
    <form action="/submit" method="post">
        <div class="row">
            <div class="label">
                <label for="blog-title">Title</label>
            </div>
           <div class="input">
                <input type="text" name="blog-title" required/>
           </div>
        </div>
        
        <div class="row">
            <div class="label">
                <label for="blog-subtitle">Subtitle</label>
            </div>
            <div class="input">
                <input type="text" name="blog-subtitle" required />
            </div>
            
        </div>

        <div class="row">
            <div class="label">
                <label for="blog-content">Content</label>
            </div>
            <div class="input">
                <textarea name="blog-content" cols="30" rows="10"></textarea>
            </div>
        </div>
        
        <div class="row">
            <button type="submit">submit</button>
        </div>
        
    </form>
</div>

